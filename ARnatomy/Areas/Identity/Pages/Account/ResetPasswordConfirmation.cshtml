@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<div style="height:100vh;align-content:center">
    <div class="row resend-email" style="margin:10%;justify-content:center">
        <div class="col-md-4 form-container">
            <section>
                <p>
                    Your password has been reset. Please <a asp-page="./Login">click here to log in</a>.
                </p>
            </section>
        </div>
    </div>
</div>

