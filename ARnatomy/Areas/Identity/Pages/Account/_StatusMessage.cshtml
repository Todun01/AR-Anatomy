@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "danger" : "success";
    <div class="row resend-email" style="margin:10%;justify-content:center">
    <div class="col-md-4 form-container">
        <section>
                <div class="alert alert-@statusMessageClass alert-dismissible" role="alert" style="margin-top: 10%">
                    <a asp-action="Index" asp-controller="Home" class="btn-close"></a>
                    @Model
                </div>
        </section>
    </div>
    </div>
    
}
